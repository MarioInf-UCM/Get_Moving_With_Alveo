{
    "name": "Xilinx Cornertrack L3 Test", 
    "description": [
        "Cornertracker L3 function example"
    ],
    "flow": "vitis",
    "platform_whitelist": [
        "u200", "zcu102", "zcu104"
    ], 
    "platform_blacklist": [
        "u280", "u250", "u50"
    ], 
    "platform_properties": {
        "u200": {
            "host": {
                "compiler": {
			"includepaths" : [
				"$(OPENCV_INCLUDE)"
			]
		},
		"linker" : {
			"librarypaths" : [
				"$(OPENCV_LIB)"
			]
		}
	    }
        },
	"zcu102": {
            "host": {
                "compiler": {
			"includepaths" : [
				"$(SYSROOT)/usr/include"
			],
			"options" : "--sysroot=$(SYSROOT)"
		},
		"linker" : {
			"librarypaths" : [
				"$(SYSROOT)/usr/lib",
				"${SYSROOT}/opt/xilinx/xrt/lib"
			]
		}
	    }
	},
	"zcu104": {
            "host": {
                "compiler": {
			"includepaths" : [
				"$(SYSROOT)/usr/include"
			],
			"options" : "--sysroot=$(SYSROOT)"					
		},
		"linker" : {
			"librarypaths" : [
				"$(SYSROOT)/usr/lib",
				"${SYSROOT}/opt/xilinx/xrt/lib"
			]
		}
	    }
        }
    },
    "gui": false,
    "launch": [
        {
            "target" : "sw_emu",
            "cmd_args": "LIB_DIR/data 4 20000 5",
            "name": "sw_emu",
	    "ld_library_path" : [
		"$(OPENCV_LIB)",
		"$(LD_LIBRARY_PATH)",
		"$(XILINX_XRT)/lib"
	    ]
        },
        {
            "target" : "hw_emu",
            "cmd_args": "LIB_DIR/data 4 20000 5",
            "name": "hw_emu",
	    "ld_library_path" : [
		"$(OPENCV_LIB)",
		"$(LD_LIBRARY_PATH)",
		"$(XILINX_XRT)/lib"
	    ]
        },
        {
            "target" : "hw",
            "cmd_args": "LIB_DIR/data 4 20000 5",
            "name": "hardware_build",
	    "ld_library_path" : [
		"$(OPENCV_LIB)",
		"$(LD_LIBRARY_PATH)",
		"$(XILINX_XRT)/lib"
	    ]
        }
    ],
    "data": ["LIB_DIR/data/im0.png", "LIB_DIR/data/im1.png", "LIB_DIR/data/im2.png", "LIB_DIR/data/im3.png", "LIB_DIR/data/im4.png"], 
    "host": {
        "host_exe": "cornertracker", 
        "compiler": {
            "sources": [
                "LIB_DIR/L3/examples/cornertracker/xf_corner_tracker_tb.cpp",
                "LIB_DIR/ext/xcl2/xcl2.cpp"
            ], 
            "options": "-O3",
            "symbols": ["__SDSVHLS__" ] 
        }
    },
    "v++":{
        "compiler": {
            "symbols": [
                
            ],
            "clflags": [
            ]
        }
    }, 
    "containers": [
        {
            "name": "krnl_cornertracker",
            "accelerators": [
                {
                    "name": "cornerTracker", 
                    "location": "LIB_DIR/L3/examples/cornertracker/xf_corner_tracker_accel.cpp"
                },
				{
                    "name": "pyr_dense_optical_flow_accel", 
                    "location": "LIB_DIR/L3/examples/cornertracker/xf_pyr_dense_optical_flow_accel.cpp"
                },
				{
                    "name": "pyr_down_accel", 
                    "location": "LIB_DIR/L3/examples/cornertracker/xf_pyr_down_accel.cpp"
                },
				{
                    "name": "cornerupdate_accel", 
                    "location": "LIB_DIR/L3/examples/cornertracker/xf_cornerupdate_accel.cpp",
                    "clflags" : "-D__SDA_MEM_MAP__"
                }
           ] 
        }
    ],
    "testinfo": {
        "disable": false, 
        "jobs": [
            {
                "index": 0, 
                "dependency": [], 
                "env": "", 
                "cmd": "", 
                "max_memory_MB": 32768, 
                "max_time_min": 520
            }
        ], 
        "targets": [
            "vitis_sw_emu", 
            "vitis_hw_emu", 
            "vitis_hw"
        ], 
        "category": "full"
    } 
}
