{
    "name": "Xilinx Binomial Tree", 
    "description": [
        "L2 Binomial Tree"
        ], 
    "flow": "vitis", 
    "platform_type": "pcie",
    "platform_whitelist": [
        "u250", 
        "u200"
    ], 
    "platform_blacklist": [
        "zc"
    ], 
    "testinfo": {
        "disable": false, 
        "jobs": [
            {
                "index": 0, 
                "dependency": [], 
                "env": "", 
                "cmd": "", 
                "max_memory_MB": 32768, 
                "max_time_min": 300
            }
        ], 
        "targets": [
            "vitis_sw_emu", 
            "vitis_hw_emu", 
            "vitis_hw"
        ], 
        "category": "canary"
    },
    "host": {
        "compiler": {
            "sources": [
                "LIB_DIR/ext/xcl2/xcl2.cpp",
                "./src/host/binomialtreecpu.cpp",
                "./src/host/binomialtreehost.cpp"
            ],
            "includepaths" : [
                "LIB_DIR/L2/include",
                "./src/kernel",
                "LIB_DIR/ext/xcl2/"
            ],
            "symbols": [
                "TEST_DT=float",
                "TEST_PARALLEL_ENGINES=8"
                ]
        }
    },
    "v++" : {
        "compiler" : {
            "symbols" : [
                "TEST_DT=float",
                "TEST_PARALLEL_ENGINES=8"
            ],
            "includepaths" : [
                "LIB_DIR/L2/include"
            ]
        }
    },
    "containers": [
        {
            "name": "binomialtree",
            "accelerators": [
                {
                    "name": "BinomialTreeKernel",
                    "location": "src/kernel/binomialtreekernel.cpp"
                }
            ]
        }
    ],
    "launch": [
        {
            "name": "generic launch for all flows",
            "cmd_args": "-xclbin BUILD/binomialtree.xclbin -data PROJECT/data"
        }
    ]
}
